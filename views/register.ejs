<div class="flex flex-col items-center justify-center min-h-[calc(100vh-200px)]">
  <h1 class="text-4xl font-bold text-center mb-8">Register as Host</h1>
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-center mb-6"><i class="fas fa-user-plus mr-2"></i>Register</h2>
    <%- include('./partials/messages') %>
    <form action="/hosts/register" method="POST">
      <div class="mb-4">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
        <input type="text" id="name" name="name" class="input" placeholder="Enter Name" value="<%= typeof name != 'undefined' ? name : '' %>" required />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
        <input type="email" id="email" name="email" class="input" placeholder="Enter Email" value="<%= typeof email != 'undefined' ? email : '' %>" required />
      </div>
      <div class="mb-4">
        <label for="phone" class="block text-gray-700 text-sm font-bold mb-2">Phone</label>
        <input type="tel" id="phone" name="phone" class="input" placeholder="Enter Phone Number" value="<%= typeof phone != 'undefined' ? phone : '' %>" required />
      </div>
      <div class="mb-4">
        <label for="address" class="block text-gray-700 text-sm font-bold mb-2">Address</label>
        <input type="text" id="address" name="address" class="input" placeholder="Enter your current Address" value="<%= typeof address != 'undefined' ? address : '' %>" required />
      </div>
      <div class="mb-4">
        <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
        <input type="password" id="password" name="password" class="input" placeholder="Create Password" required />
      </div>
      <div class="mb-6">
        <label for="password2" class="block text-gray-700 text-sm font-bold mb-2">Confirm Password</label>
        <input type="password" id="password2" name="password2" class="input" placeholder="Confirm Password" required />
      </div>
      <button type="submit" class="btn btn-primary w-full">Register</button>
    </form>
    <p class="text-center mt-4">
      Have An Account? <a href="/hosts/login" class="text-primary hover:underline">Login</a>
    </p>
  </div>
</div>