<div class="flex flex-col items-center justify-center min-h-[calc(100vh-200px)]">
  <h1 class="text-4xl font-bold text-center mb-8">Login to Ingress</h1>
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-semibold text-center mb-6"><i class="fas fa-sign-in-alt mr-2"></i>Login</h2>
    <%- include('./partials/messages') %>
    <form action="/hosts/login" method="POST">
      <div class="mb-4">
        <label for="email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
        <input type="email" id="email" name="email" class="input" placeholder="Enter Email" required />
      </div>
      <div class="mb-6">
        <label for="password" class="block text-gray-700 text-sm font-bold mb-2">Password</label>
        <input type="password" id="password" name="password" class="input" placeholder="Enter Password" required />
      </div>
      <button type="submit" class="btn btn-primary w-full">Login</button>
    </form>
    <p class="text-center mt-4">
      No Account? <a href="/hosts/register" class="text-primary hover:underline">Register</a>
    </p>
    <p class="text-sm text-gray-600 mt-4 text-center">You will be checked in automatically once you login</p>
  </div>
</div>