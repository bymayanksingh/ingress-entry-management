<div class="row mt-5">
  <div class="col-md-6 m-auto">
      <h1 class="text-center">Ingress - an entry management application</h1>
      <br><br>
      <br><br>
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <% include ./partials/messages %>
      <form action="/hosts/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/hosts/register">Register</a>
      </p>
      <blockquote class="blockquote">
          <footer class="blockquote-footer">you will be checked in automatically once you login in</footer>
        </blockquote>
    </div>
  </div>
</div>
